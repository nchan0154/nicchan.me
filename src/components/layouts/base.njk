<html lang="{{ config.lang }}" prefix="og: http://ogp.me/ns#" data-js-enabled="false">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <link rel="alternate" type="application/rss+xml" title="{{ config.title }}" href="{{ config.url }}/feed.xml"/>
    {% include "global/meta.njk" %}
    <link rel="icon" href="/static/favicon.png" type="image/png"/>
    {% block head %}{% endblock %}
    <script>
      const scheme = localStorage.getItem("color-scheme");
      if (scheme) document.documentElement.setAttribute("data-user-color-scheme", scheme);
    </script>
    <link rel="stylesheet" href="/assets/css/app.css" />
    <script defer data-domain="nicchan.me" src="https://plausible.io/js/script.js"></script>
    <script src="/assets/js/app.js" defer></script>
  </head>
  <body>
    <a class="skip-link" href="#main">
      Skip to main content
    </a>
    {% include "global/nav.njk" %}
    <main id="main">
      {% block content %}{{ content | safe }}{% endblock content %}
    </main>
    {% include "global/footer.njk" %}
    {% block footer %}{{ footer | safe }}{% endblock footer %}
    <script>
      document.documentElement.setAttribute('data-js-enabled', 'true');
    </script>
  </body>
</html>
